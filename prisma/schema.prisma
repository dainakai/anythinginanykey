// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Phrase {
  id           String   @id @default(cuid())
  abcNotation  String
  originalKey  String
  comment      String?
  isPublic     Boolean  @default(false)
  starCount    Int      @default(0)
  forkedFromId String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  userId       String   // Changed from relation to String for Supabase Auth user ID
  tags         Tag[]
  stars        Star[]
  comments     Comment[]
}

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  type      String   // "preset" or "user_defined"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String?  // Changed from relation to String? for Supabase Auth user ID
  phrases   Phrase[]
}

model Star {
  userId    String   // Changed from relation to String for Supabase Auth user ID
  phraseId  String
  createdAt DateTime @default(now())

  phrase Phrase @relation(fields: [phraseId], references: [id], onDelete: Cascade)

  @@id([userId, phraseId]) // Composite primary key
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  userId    String   // Changed from relation to String for Supabase Auth user ID
  phraseId  String

  phrase Phrase @relation(fields: [phraseId], references: [id], onDelete: Cascade)
}
